<script>


    document.addEventListener("DOMContentLoaded", function (e) {
        var Count = 0;
        var Clear = 1;

        var A = $(".My_slider img").val(function () {
            return $(this).attr("id");
        });



        setInterval(function (e) {

            if (Count >= A.length) {

                Count = 0;
                Clear = 1;

            }

            $(`.My_slider #${A[Count].id}`).show("fade", 700);
            $(`.My_slider #${A[Count].id}`).delay(3000).hide("slide", { direction: "left" }, 200);

            Count++;
            console.log(Count);

        }, 3800);

    });

</script>
